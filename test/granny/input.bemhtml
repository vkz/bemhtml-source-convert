block input {
    tag: 'span'

    mix: [{ block: 'clearfix' }]

    default: {
        applyNext(
            this._attrs = this.ctx.attrs,
            this.ctx.attrs = null
        );
    }

    content: {
        var attrs = this._attrs || {};

        attrs.id || (attrs.id = this.generateId());

        return {
            elem: 'control',
            attrs: attrs
        }
    }

    elem control, tag: 'input'
}
